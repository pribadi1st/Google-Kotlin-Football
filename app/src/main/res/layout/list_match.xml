<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Second_Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_team"
            android:layout_marginEnd="41dp" android:layout_marginRight="41dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp"/>
    <TextView
            android:text="VS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/divider"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/schedule_match"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="FirstTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/first_team"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="41dp" android:layout_marginStart="41dp"/>
    <TextView
            android:text="Schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/schedule_match"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"/>
</android.support.constraint.ConstraintLayout>