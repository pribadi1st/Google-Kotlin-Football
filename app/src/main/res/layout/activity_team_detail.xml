<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeamDetailActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/team_logo" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Team Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/team_name"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/team_logo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="163dp" android:layout_marginStart="163dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"
            android:layout_marginRight="163dp"/>
    <TextView
            android:text="1900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/team_founded"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/team_name" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Bon ape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/team_alias"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/team_founded" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_team" tools:layout_editor_absoluteY="352dp"
            tools:layout_editor_absoluteX="0dp"/>
    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tabLayout"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/team_alias"
            app:tabMode="fixed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="270dp" android:id="@+id/view_pager_team" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>